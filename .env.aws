# AWS / Production environment variables for backend services running on EC2
NODE_ENV=production
FLASK_ENV=production
FLASK_DEBUG=0

# Database (Postgres container on the same EC2 host)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=todo_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis (Redis container on the same EC2 host)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_TLS=false

# SQS (ElasticMQ container on the same EC2 host)
SQS_QUEUE_URL=http://elasticmq:9324/queue/todo-app-dev-queue
SQS_DLQ_URL=http://elasticmq:9324/queue/todo-app-dev-dlq
SQS_REGION=ap-southeast-1
SQS_ACCESS_KEY=x
SQS_SECRET_KEY=x

# Frontend -> Backend API URL (replace <EC2_PUBLIC_IP> with your EC2 public IP)
# Note: if you later add HTTPS (ALB/NGINX + TLS), change this to https://your-domain
REACT_APP_API_URL=http://<EC2_PUBLIC_IP>:3001
